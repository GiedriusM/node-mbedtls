{
  "env": {
    "browser": false,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "object-shorthand": ["error", "never"],
    "prefer-destructuring": ["error", {
      "VariableDeclarator": {
        "array": true,
        "object": true
      },
      "AssignmentExpression": {
        "array": true,
        "object": false
      }
    }]
  }
}
